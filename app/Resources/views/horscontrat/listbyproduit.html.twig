{% extends 'base.html.twig' %}

{% block body %}

<h1>Liste des produits hors contrat</h1>
  <table class="table table-bordered" >
  <thead>
	<tr>
		<th align="center", colspan="4">Liste des produits hors contrat</th>'
	</tr>
   </thead>
   <tbody>
	{% set totalProduits = 0 %}

	{% set i = 0 %}
	{% for nomProduit, produitCount in produits %}
		{% if i == 0 %}
				 <tr>
		{% endif %}
		<td> {{ nomProduit }} </td>
		<td> {{ produitCount }} </td>
		{% set totalProduits = totalProduits + produitCount %}
		{% set i = i + 1 %}
		{% if i == 2 %}
			</tr>
			{% set i = 0 %}
		{% endif %}

	{% endfor %} 
	{% if i != 0 %}
	</tr>
	{% endif %}
	<tr>
	  <td align="center" colspan="2">
			Nombre total de paquets
	  </td>
	  <td align="center" colspan="2">
			{{ totalProduits }}
	  </td>
	</tr>
  </tbody>
</table>

{% endblock %} 
